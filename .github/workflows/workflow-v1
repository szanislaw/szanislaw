name: Generate Activity Graph

on:
  schedule:
    - cron: "0 0 * * *"   # Runs every day at midnight UTC
  workflow_dispatch:       # Allow manual trigger from the Actions tab

jobs:
  build:
    runs-on: ubuntu-latest
    permissions:
      contents: write       # allow workflow to push commits

    steps:
      - name: Checkout repo
        uses: actions/checkout@v3

      - name: Generate GitHub Activity Graph
        uses: ashutosh00710/github-readme-activity-graph@master
        with:
          USERNAME: szanislaw
          THEME: react-dark
          OUTPUT_PATH: activity-graph.svg   # save directly at root

      - name: Commit & Push changes
        run: |
          git config --global user.name "github-actions[bot]"
          git config --global user.email "github-actions[bot]@users.noreply.github.com"
          git add activity-graph.svg
          git commit -m "Update activity graph" || echo "No changes to commit"
          git push
